<%= form_for [user, weight] do |f| %>
  <div class="form-group">
    <%= f.label :weight %>
    <%= f.number_field :value, autofocus: true, class: "form-control weight-form", placeholder: "Enter your weight in pounds" %>
  </div>
  <div class="form-group">
    <%= f.submit "Log Weight", class: 'btn btn-md btn-success' %>
  </div>
<% end %>
