<%= form_for @workout do |f| %>
  <div class="form-group">
    <%= f.label :location %>
    <%= f.text_field :location, autofocus: true, class: 'form-control', placeholder: "Where are you?" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control', placeholder: "Add a description" %>
  </div>
  <div class="form-group">
    <%= f.submit "Start Workout", class: 'btn btn-success' %>
  </div>
<% end %>
