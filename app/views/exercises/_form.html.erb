<%= form_for [@workout, @exercise] do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: "Example: Bench Press" %>
  </div>
  <div class="form-group">
    <%= f.submit "Start Exercise", class: 'btn btn-success' %>
  </div>
<% end %>
