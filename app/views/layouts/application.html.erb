<!DOCTYPE html>
<html>
  <head>
    <title>Gains Track</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="nav nav-pills">
      <ul class="nav nav-tabs">
        <li><%= link_to "Home", welcome_path %></li>
        <li><%= link_to "About", about_path %></li>
        <li><%= link_to "New Workout", new_workout_path %></li>
        <li><%= link_to "Workout History", workouts_path %></li>
        <div class="pull-right user-info">
          <% if current_user %>
            Hello <%= current_user.name || current_user.email %>! &nbsp;
            <%= link_to edit_user_registration_path, class: 'btn btn-primary btn-sm fa-top-main' do %>
              <%= fa_icon "user" %>
            <% end %>
            <%= link_to destroy_user_session_path, method: :delete, class: 'btn btn-primary btn-sm fa-top-main' do %>
              <%= fa_icon "sign-out" %>
            <% end %>
          <% else %>
            <%= link_to "Sign In", new_user_session_path %> or
            <%= link_to "Sign Up", new_user_registration_path %>
          <% end %>
        </div>
      </ul>
    </div>
    <div class="container">
      <% if flash[:notice] %>
        <div class="alert alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:notice] %>
        </div>
      <% elsif flash[:error] %>
        <div class="alert alert-danger">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:error] %>
        </div>
      <% elsif flash[:alert] %>
        <div class="alert alert-warning">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:alert] %>
        </div>
      <% end %>
    </div>
    <div class="container">

      <%= yield %>

    </div>
  </body>
</html>
